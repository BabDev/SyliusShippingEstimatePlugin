<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="babdev_sylius_shipping_estimate.shop.controller.shipping_estimator" class="BabDev\SyliusShippingEstimatePlugin\Controller\ShippingEstimatorController">
            <argument type="expression">service('sylius.resource_registry').get('sylius.order')</argument>
            <argument type="service" id="sylius.resource_controller.request_configuration_factory" />
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="sylius.resource_controller.view_handler" />
            <argument type="service" id="form.factory" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="babdev_sylius_shipping_estimate.shop.form.type.shipping_estimator" class="BabDev\SyliusShippingEstimatePlugin\Form\Type\ShippingEstimatorType">
            <tag name="form.type" />
        </service>
    </services>
</container>
